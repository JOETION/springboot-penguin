<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.qexz.dao.MessageMapper">
    <resultMap id="BaseResultMap" type="com.qexz.model.Message">
        <result column="id" property="id" jdbcType="INTEGER"/>
        <result column="user_id" property="userId" jdbcType="INTEGER"/>
        <result column="message_content" property="complaintContent" jdbcType="VARCHAR"/>
        <result column="message_state" property="messageState" jdbcType="INTEGER"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        user_id,message_content,which_id,message_state
    </sql>

    <insert id="insertMessage" parameterType="com.qexz.model.Message">
        INSERT INTO t_penguin_message(user_id,message_content,message_state)
        VALUES (#{message.userId},#{message.messageContent},#{message.messageState})
    </insert>

</mapper>